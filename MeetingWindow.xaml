<Window x:Class="Collabry.MeetingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collabry"
        mc:Ignorable="d"
        Title="MeetingWindow" Height="700" Width="1200">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="Gray">
            <TextBlock Text="Voice test1" FontWeight="SemiBold" FontSize="24" VerticalAlignment="Center" Margin="8"/>
        </StackPanel>
        <Border Margin="16" Padding="8" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Grid.Row="0" CornerRadius="16" Margin="4" Background="#FF777777">
                    <Border Width="96" Height="96" CornerRadius="48" Background="LightGray">
                        <TextBlock Text="Myhailo" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Border>
                <Border Grid.Column="1" Grid.Row="0" CornerRadius="16" Margin="4" Background="#FF777777">
                    <Border Width="96" Height="96" CornerRadius="48" Background="LightGray">
                        <TextBlock Text="Некич" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Border>
                <Border Grid.Column="2" Grid.Row="0" CornerRadius="16" Margin="4" Background="#FF777777">
                    <Border Width="96" Height="96" CornerRadius="48" Background="LightGray">
                        <TextBlock Text="Тимофейка" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" CornerRadius="16" Margin="4" Background="#FF777777">
                    <Border Width="96" Height="96" CornerRadius="48" Background="LightGray">
                        <TextBlock Text="Кристя" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Border>
            </Grid>
        </Border>
        <StackPanel Grid.Row="2" Background="Gray">
            <Border HorizontalAlignment="Center" CornerRadius="12" Margin="10" Padding="6" Background="#E5BFBFBF">
                <StackPanel Orientation="Horizontal">
                    <Border Height="64" Width="64" Margin="6" CornerRadius="32" Background="#CC93FF76">

                    </Border>
                    <Border Height="64" Width="64" CornerRadius="32" Margin="6" Background="#CCF1FB3D">

                    </Border>
                    <Border Height="64" Width="64" CornerRadius="32" Margin="6" Background="#CCFF6262">

                    </Border>
                    <Border Height="64" Width="64" CornerRadius="32" Margin="6" Background="#CCF5F5F5">

                    </Border>
                    <Border Height="64" Width="64" CornerRadius="32" Margin="6" Background="LightGray">

                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
