                            </Border>
                        </ListBoxItem>
                        <ListBoxItem Padding="0" Margin="0">
                            <Border Height="65" Width="65" Background="#DDD" Margin="0" Padding="0" CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="DIS" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                            </Border>
                        </ListBoxItem>
                        <ListBoxItem Padding="0" Margin="0">
                            <Border Height="65" Width="65" Background="#DDD" Margin="0" Padding="0" CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="TIMS" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                            </Border>
                        </ListBoxItem>
                        <ListBoxItem Padding="0" Margin="0">
                            <Border Height="65" Width="65" Background="#DDD" Margin="0" Padding="0" CornerRadius="30" HorizontalAlignment="Left">
                                <TextBlock Text="+" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="60" Margin="0,-15,0,0"/>
                            </Border>
                        </ListBoxItem>
                    </ListBox>
                </Border>
            </StackPanel>

            <!-- ChatList -->
            <!-- Visibility to collapsed -->
            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0 2 2 2" Visibility="Visible">
