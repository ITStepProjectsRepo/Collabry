                            <Border CornerRadius="10" Background="White" BorderThickness="1" BorderBrush="LightGray">
                                <StackPanel Orientation="Horizontal" Width="245">
                                    <Border Height="40" Width="40" Background="#DDD" Margin="6" Padding="0" CornerRadius="30" HorizontalAlignment="Left">
                                        <TextBlock Text="Кристя" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8"/>
                                    </Border>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Width="170">
                                            <TextBlock Text="Кристя" FontSize="18" Padding="2" TextWrapping="NoWrap" Width="150" HorizontalAlignment="Left" Margin="0"/>
