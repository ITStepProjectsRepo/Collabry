                                </StackPanel>
                            </Border>
                        </ListBoxItem>
                        <ListBoxItem Width="240" Visibility="Visible">
                            <Border CornerRadius="10" Background="White" BorderThickness="1" BorderBrush="LightGray">
                                <StackPanel Orientation="Horizontal" Width="230">
                                    <Border Height="40" Width="40" Background="#DDD" Margin="6" Padding="0" CornerRadius="30" HorizontalAlignment="Left">
                                        <TextBlock Text="Некич" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8"/>
                                    </Border>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Width="170">
                                            <TextBlock Text="Некич" FontSize="18" Padding="2" TextWrapping="NoWrap" Width="150" HorizontalAlignment="Left" Margin="0"/>
                                            <Border Height="10" Width="10" Background="#2B90C8" Margin="6" Padding="0" CornerRadius="30" HorizontalAlignment="Left" Visibility="Hidden"/>
                                        </StackPanel>

