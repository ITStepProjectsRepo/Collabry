<Window x:Class="Collabry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Collabry Chat" Height="700" Width="1200" Background="White"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="ListBox" x:Key="No_Selection">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.Setters>
                        <Setter Property="Background" Value="Transparent"/>
                    </Trigger.Setters>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Settings -->
        <!-- Default visibility Collapsed -->
        <Grid Visibility="Collapsed" Background="Gray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="#252537">
                <!-- "Search chats" -->
                <Border CornerRadius="10" BorderBrush="LightGray" BorderThickness="1" VerticalAlignment="Center" Margin="12 12">
                    <TextBox Height="25" Width="200" BorderBrush="Transparent" Text="Search" FontSize="16" Foreground="White" Background="Transparent"/>
                </Border>
                <!-- Chat list -->
                <ScrollViewer Margin="0" Padding="0" VerticalScrollBarVisibility="Hidden">
                    <ListBox Background="Transparent" Margin="0" Padding="0" BorderThickness="0" HorizontalAlignment="Left">
                        <ListBoxItem Margin="0" MaxWidth="220" HorizontalContentAlignment="Left" HorizontalAlignment="Left">
                            <Border CornerRadius="10" Background="Transparent" Padding="0">
                                <StackPanel Background="Transparent">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Visibility="Visible" Foreground="White" Text="User Settings" FontSize="16" Padding="0" TextWrapping="NoWrap" Margin="8 0"/>
                                    </StackPanel>
                                    <ListBox Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="2">
                                        <ListBoxItem Margin="0" Padding="0" MaxWidth="210" HorizontalAlignment="Left">
                                            <Border CornerRadius="10" Background="Transparent" Width="200" BorderBrush="Gray" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="My Account" Foreground="White" FontSize="20" Padding="10 4" TextWrapping="NoWrap" Margin="0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ListBoxItem>
                                        <ListBoxItem Margin="0" Padding="0" MaxWidth="210" HorizontalAlignment="Left">
                                            <Border CornerRadius="10" Background="Transparent" Width="200" BorderBrush="Gray" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Profiles" Foreground="White" FontSize="20" Padding="10 4" TextWrapping="NoWrap" Margin="0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ListBoxItem>
                                        <ListBoxItem Margin="0" Padding="0" MaxWidth="210" HorizontalAlignment="Left">
                                            <Border CornerRadius="10" Background="Transparent" Width="200" BorderBrush="Gray" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Voice and Video" Foreground="White" FontSize="20" Padding="10 4" TextWrapping="NoWrap" Margin="0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ListBoxItem>
                                        <ListBoxItem Margin="0" Padding="0" MaxWidth="210" HorizontalAlignment="Left">
                                            <Border CornerRadius="10" Background="Transparent" Width="200" BorderBrush="Gray" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Appearance" Foreground="White" FontSize="20" Padding="10 4" TextWrapping="NoWrap" Margin="0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ListBoxItem>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </ListBoxItem>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>

            <Border Grid.Column="1" Background="#353551" BorderBrush="LightGray" BorderThickness="1 0 1 0">
                <StackPanel Margin="0">
                    <Border BorderBrush="LightGray" BorderThickness="0 0 0 1">
                        <TextBlock Text="My Account" Foreground="White" FontSize="20" Padding="16 8" TextWrapping="NoWrap" Margin="0" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="2" Orientation="Vertical" Background="#252537">
                <Border HorizontalAlignment="Center" Margin="20 8">
                    <StackPanel>
                        <Border CornerRadius="16" Width="32" Height="32" BorderBrush="Gray" BorderThickness="1">
                            
                        </Border>
                        <TextBlock Text="Esc" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>

        <!-- Main panel -->
        <!-- Default visibility Visible -->
        <Grid Visibility="Visible" Background="White">
