                                    <Border Height="40" Width="40" Background="#DDD" Margin="6" Padding="0" CornerRadius="30" HorizontalAlignment="Left">
                                        <TextBlock Text="Т" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8"/>
                                    </Border>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Width="170">
                                            <TextBlock Text="Тимофейка" FontSize="18" Padding="2" TextWrapping="NoWrap" Width="150" HorizontalAlignment="Left" Margin="0"/>
