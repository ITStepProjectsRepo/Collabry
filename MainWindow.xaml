                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Border Margin="8" Height="20" Width="20" CornerRadius="10" Background="#FF0CC30C">

                                                        </Border>
                                                        <TextBlock Text="Text4" FontSize="20" FontWeight="SemiBold" Padding="10 0" TextWrapping="NoWrap" Margin="0" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </ListBoxItem>
                                        </ListBox>
                                    </StackPanel>
                                </Border>
                            </ListBoxItem>
                            <ListBoxItem Margin="0" MaxWidth="220" HorizontalContentAlignment="Left" HorizontalAlignment="Left">
                                <Border CornerRadius="10" Background="#6D8B75" Padding="0">
                                    <StackPanel Background="Transparent">
                                        <TextBlock Visibility="Visible" Foreground="White" Text="Voice chats" FontSize="16" Padding="0" TextWrapping="NoWrap" Margin="8 0"/>
