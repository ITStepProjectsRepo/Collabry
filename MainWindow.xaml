                    <!-- "Search chats" 
                <Border CornerRadius="10" BorderBrush="LightGray" BorderThickness="2" VerticalAlignment="Center"   Margin="6 0">
                    <TextBox Height="20" Width="220" BorderBrush="Transparent" Text="Search chats" Foreground="Gray" Background="Transparent"/>
                </Border>-->

                    <!-- Chat list -->
                    <ScrollViewer Margin="0" Padding="0" >
                        <ListBox Background="Transparent" Margin="0" Padding="0" BorderThickness="0" HorizontalAlignment="Left">
                            <ListBoxItem Margin="0" Width="225" HorizontalContentAlignment="Left">
