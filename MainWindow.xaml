<Window x:Class="Collabry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Collabry Chat" Height="700" Width="1200" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52"/>
            <ColumnDefinition Width="300"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Chat area -->
            <ColumnDefinition Width="250"/>
            <!-- Profile panel -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#F4F4F4" Grid.Column="0" Grid.ColumnSpan="2">
            <!-- Аватар -->
            <Border Height="60" Width="60" Background="#DDD" Margin="10" CornerRadius="30" HorizontalAlignment="Left">
                <TextBlock Text="Helen" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
            </Border>
            <TextBox Height="20" Text="Search chats" Foreground="Gray" Width="196"/>

            <!-- "Search chats" -->

            <!-- Chat list -->
            <ListBox Background="White" Margin="50" BorderThickness="0">
                <ListBoxItem Content="Helena Hills" FontSize="20"/>
                <ListBoxItem Content="Oscar Davis" FontSize="20"/>
                <ListBoxItem Content="Daniel Jay Park" FontSize="20"/>
                <ListBoxItem Content="Mark Rojas" FontSize="20"/>
            </ListBox>
        </StackPanel>

        <!-- Chat area -->
        <Grid Grid.Column="2" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Bar -->
                <RowDefinition Height="*"/>
                <!-- Messages -->
                <RowDefinition Height="Auto"/>
                <!-- Input -->
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Border Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                <TextBlock Text="Helena Hills" FontWeight="Bold" FontSize="16"/>

            </Border>
            <!-- Top bar -->
            <Border Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                <TextBlock FontWeight="Bold" FontSize="16"><Run Text="Helena Hills"/><LineBreak/><Run FontFamily="454545" FontSize="9" Text="Actives 20 min" Foreground="#FF646161"/></TextBlock>

            </Border>

            <!-- Messages -->
            <ScrollViewer Margin="0,53,0,21" Grid.RowSpan="2">
                <StackPanel Margin="10">
                    <TextBlock Text="No honestly I'm thinking of a career pivot" Background="#EEE" Padding="10" TextWrapping="Wrap" Width="250" HorizontalAlignment="Right" Margin="5,5,5,5"/>
                    <TextBlock Text="This is the main chat template" Background="#EEE" Padding="10" Margin="5" TextWrapping="Wrap" Width="250" HorizontalAlignment="Right"/>
                    <TextBlock Text="Mai 14, 2025, 22:41 AM" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Oh?" Background="#DCF8C6" Padding="10" Width="60" HorizontalAlignment="Left" Margin="5,45,5,0"/>
                    <TextBlock Text="Cool" Background="#DCF8C6" Padding="10" Width="60" HorizontalAlignment="Left" Margin="5,5,5,20"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Input -->
            <DockPanel Margin="0,610,0,0" Grid.Row="1">
                <TextBox Height="25" Width="548" Text="Type a message..." Foreground="Gray" Margin="0,0,10,0"/>
            </DockPanel>
        </Grid>

        <!-- Profile panel -->
        <StackPanel Grid.Column="3" Background="#FAFAFA">
            <Border Margin="20" Width="120" Height="120" Background="#DDD" CornerRadius="60" HorizontalAlignment="Center">
                <TextBlock Text="H" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"/>
            </Border>
            <TextBlock Text="Helena" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock Text="Active 20m ago" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Search messages" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="More Options" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,0"/>
            <Button Content="Send images" Margin="10" Background="#5A5AFF" Foreground="White" Width="200" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>